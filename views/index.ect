<% extend 'layout.ect' %>
<h1><%= @title %></h1>
<p><a href="/form">New Entry</a></p>

<div class="container table-responsive">
<table class="table table-hover">
  <tr><th>image</th>
      <th>id</th>
      <th>name</th>
      <th>created at</th>
  </tr>
<% for item in @items: %>
<%   sex = '&x=' + item.sex if item.sex %>
  <tr>
    <td>
      <a href="/avatar/<%= item.id %>?s=100<%= sex %>">
        <img src="/avatar/<%= item.id %>?s=30<%= sex %>" class="img-responsive img-circle" />
      </a>
    </td>
    <td style="font-family:monospace;"><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.created %> <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></td>
  </tr>
<% end %>
</table>
</div>
